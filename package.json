{
  "name": "debt-destroyer",
  "version": "1.0.0",
  "description": "",
  "main": "src/js/index.js",
  "scripts": {
    "test": "karma start karma.config.js",
    "clean": "rm -rf dist",
    "prepare-dirs": "mkdir dist",
    "build": "NODE_ENV=production && npm run build-primer && concurrently \"npm run build-core\" \"npm run build-extra-resources\"",
    "build-dev": "NODE_ENV=development && concurrently \"npm run build-core\" \"npm run build-extra-resources\"",
    "build-primer": "npm run clean && npm run prepare-dirs",
    "build-core": "concurrently \"npm run build-js\" \"npm run build-html\" \"npm run build-styles\"",
    "build-extra-resources": "concurrently \"npm run build-images\"",
    "build-js": "webpack -p --config webpack.config.js --color --display-error-details",
    "build-styles": "node-sass ./src/sass --output ./dist",
    "build-images": "cp -a ./src/img ./dist",
    "build-html": "cp -a ./src/html/index.html ./dist",
    "start": "npm run build-dev && npm run watch-js & npm run watch-styles & npm run watch-images & npm run watch-html",
    "watch-js": "webpack --config webpack.config.js --progress --color --display-error-details --watch --debug --output-pathinfo --devtool=source-map",
    "watch-styles": "node-sass ./src/sass --output ./dist --watch",
    "watch-images": "cpx \"src/img/*\" dist/img --watch -v",
    "watch-html": "cpx \"src/html/**/*\" dist --watch -v"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.9.0",
    "babel-core": "^6.18.2",
    "babel-loader": "^6.2.4",
    "babel-plugin-istanbul": "^4.1.1",
    "babel-plugin-syntax-jsx": "^6.13.0",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-plugin-transform-react-jsx": "^6.8.0",
    "babel-plugin-transform-runtime": "^6.8.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-es2017": "^6.9.2",
    "babelify": "^7.3.0",
    "browserify": "^13.0.0",
    "concurrently": "^2.2.0",
    "cpx": "^1.3.2",
    "expect": "^1.20.2",
    "istanbul": "^0.4.5",
    "istanbul-coveralls": "^1.0.3",
    "karma": "^1.6.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.1",
    "karma-coveralls": "^1.1.2",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.3",
    "karma-webpack": "^2.0.3",
    "mocha": "^3.0.2",
    "node-sass": "^3.7.0",
    "phantomjs": "^2.1.7",
    "rimraf": "^2.5.2",
    "webpack": "^2.3.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://3stacks@github.com/3stacks/debt-destroyer.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/3stacks/debt-destroyer/issues"
  },
  "homepage": "https://github.com/3stacks/debt-destroyer#readme",
  "dependencies": {
    "@lukeboyle/sync-vars": "^1.0.1",
    "chart.js": "^2.5.0",
    "is-it-set": "^1.0.3",
    "js-base64": "^2.1.9",
    "lodash": "^4.17.4",
    "moment": "^2.17.1",
    "query-string": "^4.3.2",
    "vue": "^2.2.3",
    "vue-material": "^0.7.1"
  }
}
